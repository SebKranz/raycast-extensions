{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mullvad-connection-manager",
  "title": "Mullvad Connection Manager",
  "description": "Connect, disconnect and switch between regions.",
  "icon": "icon.png",
  "author": "sebastiankranz",
  "categories": [
    "Security"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "selectLocation",
      "title": "Select Mullvad Location",
      "subtitle": "Mullvad",
      "description": "Sets the destination Mullvad server.",
      "mode": "view"
    },
    {
      "name": "connect",
      "title": "Connect",
      "subtitle": "Mullvad",
      "description": "Activates the VPN connection.",
      "mode": "no-view"
    },
        {
      "name": "disconnect",
      "title": "Disconnect",
      "subtitle": "Mullvad",
      "description": "Deactivates the VPN connection.",
      "mode": "no-view"
    }

  ],
  "dependencies": {
    "@raycast/api": "^1.64.4",
    "@raycast/utils": "^1.10.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
